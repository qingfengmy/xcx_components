
 .waves{
  height: 50rpx;
  width: 50rpx;
}

 .waves .movement {
  position: relative;
  float: left;
  height: 100%;
  width: 12%;
  overflow: hidden;
  margin-right: 1px;
}

 .waves .movement .ani-li {
  position: absolute;
  bottom: 0;
  display: block;
  height: 100%;
  width: 20rpx;
  background: white;
}

 .waves .li1 .ani-li {
  animation: waves 0.6s linear 0s infinite alternate;
}

 .waves .li2 .ani-li {
  animation: waves 0.9s linear 0s infinite alternate;
}

 .waves .li3 .ani-li {
  animation: waves 1s linear 0s infinite alternate;
}

 .waves .li4 .ani-li {
  animation: waves 0.8s linear 0s infinite alternate;
}

 .waves .li5 .ani-li {
  animation: waves 0.7s linear 0s infinite alternate;
}

 .waves .li6 .ani-li {
  animation: waves 0.5s linear 0s infinite alternate;
}

@keyframes waves {
  10% {
    height: 20%;
  }

  20% {
    height: 60%;
  }

  40% {
    height: 40%;
  }

  50% {
    height: 100%;
  }

  100% {
    height: 50%;
  }
}
